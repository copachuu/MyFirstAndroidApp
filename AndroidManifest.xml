<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.get_permissions"> <!--here is the name of project-->

    <!-- This line is an example of how to make comments in xml-->

    <!-- All permissions needed (for my idea of the app)-->
    <uses-permission android:name="android.permission.READ_CALENDAR"/>    <!--protection level: dangerous-->
    <uses-permission android:name="android.permission.WRITE_CALENDAR"/>    <!--protection level: dangerous-->
    <uses-permission android:name="android.permission.READ_CONTACTS"/>    <!--protection level: dangerous-->
    <uses-permission android:name="android.permission.RECORD_AUDIO"/>    <!--protection level: dangerous-->
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS"/>    <!--protection level: normal-->
    <uses-permission android:name="android.permission.ACCESS_CALL_AUDIO"/>    <!--protection level: signature-->
    <uses-permission android:name="android.permission.CALL_COMPANION_APP"/>    <!--protection level: normal-->
    <uses-permission android:name="android.permission.READ_CALL_LOG"/>     <!--protection level: dangerous-->
    <uses-permission android:name="android.permission.WRITE_CALL_LOG"/>     <!--protection level: dangerous-->

    <!--template-->
    <!-- <uses-permission android:name="android.permission.TEMPLATE"/> -->

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>
